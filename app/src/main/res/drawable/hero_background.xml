        <bitmap
            android:src="@drawable/mainbg"
            android:gravity="center_crop" />
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#60FF6B6B"
                android:centerColor="#604ECDC4"
                android:endColor="#60FFE66D"
